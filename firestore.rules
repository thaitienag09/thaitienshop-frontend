rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user is the owner
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Projects: Anyone can read, only Admin can write
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users: Owner and Admin can read/write
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }

    // Transactions: 
    // - Authenticated users can create their own transactions with 'pending' status
    // - Owners and Admins can read
    // - ONLY Admins (or Webhook via Admin SDK) can update status
    match /transactions/{transactionId} {
      allow create: if request.auth != null && request.resource.data.status == 'pending';
      allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}
